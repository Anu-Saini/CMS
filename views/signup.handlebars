<form id ='signupForm'>
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
   <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" required placeholder="Enter your name">
    
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="password" required placeholder="Password">
    <p> your password should be a combination of numbers, character and special characters like $, #, &, @.....</p>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/js/signup.js"></script>